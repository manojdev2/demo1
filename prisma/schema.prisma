// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
// Step: 1 run `npx prisma generate` 
// Step: 2 run `npx prisma db push` after update (MongoDB uses db push instead of migrate)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // Password reset fields
  resetPasswordToken     String?
  resetPasswordExpires  DateTime?

  // Subscription fields
  subscriptionPlan     String  @default("free") // free, freshers, experience
  stripeCustomerId     String?
  stripeSubscriptionId String?

  jobsApplied         Job[]
  JobTitle            JobTitle[]
  Location            Location[]
  Company             Company[]
  Contact             Contact[]
  Profile             Profile[]
  Activity            Activity[]
  ActivityType        ActivityType[]
  CoverLetterTemplate CoverLetterTemplate[]
}

model Profile {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  userId  String   @db.ObjectId
  user    User     @relation(fields: [userId], references: [id])
  resumes Resume[]
}

model Resume {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  profileId      String          @db.ObjectId
  title          String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  ContactInfo    ContactInfo?
  ResumeSections ResumeSection[]
  profile        Profile         @relation(fields: [profileId], references: [id])
  File           File?           @relation("FileToResume", fields: [FileId], references: [id])
  FileId         String?         @db.ObjectId
  Job            Job[]

  @@unique([profileId, title])
}

model File {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fileName    String
  fileType    String
  fileSize    Int? // File size in bytes (optional for legacy files)
  fileContent Bytes // Binary file content stored in MongoDB
  uploadedAt  DateTime @default(now())
  Resumes     Resume[] @relation("FileToResume")
}

model ResumeSection {
  id                      String                   @id @default(auto()) @map("_id") @db.ObjectId
  resumeId                String                   @db.ObjectId
  sectionTitle            String
  sectionType             String
  summaryId               String?                  @db.ObjectId
  summary                 Summary?                 @relation(fields: [summaryId], references: [id])
  workExperiences         WorkExperience[]
  educations              Education[]
  licenseOrCertifications LicenseOrCertification[]
  others                  OtherSection[]
  Resume                  Resume                   @relation(fields: [resumeId], references: [id])
}

model ContactInfo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resumeId  String   @unique @db.ObjectId
  firstName String
  lastName  String
  headline  String
  email     String
  phone     String
  address   String?
  resume    Resume   @relation(fields: [resumeId], references: [id])
}

model Summary {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  content       String
  ResumeSection ResumeSection[]  @relation
}

model WorkExperience {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  companyId       String         @db.ObjectId
  Company         Company        @relation(fields: [companyId], references: [id])
  jobTitleId      String         @db.ObjectId
  jobTitle        JobTitle       @relation(fields: [jobTitleId], references: [id])
  startDate       DateTime
  endDate         DateTime?
  description     String
  locationId      String         @db.ObjectId
  location        Location       @relation(fields: [locationId], references: [id])
  resumeSectionId String?        @db.ObjectId
  ResumeSection   ResumeSection? @relation(fields: [resumeSectionId], references: [id])
}

model Education {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  institution     String
  degree          String
  fieldOfStudy    String
  startDate       DateTime
  endDate         DateTime?
  description     String?
  locationId      String         @db.ObjectId
  location        Location       @relation(fields: [locationId], references: [id])
  resumeSectionId String?        @db.ObjectId
  ResumeSection   ResumeSection? @relation(fields: [resumeSectionId], references: [id])
}

model LicenseOrCertification {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  organization    String
  issueDate       DateTime?
  expirationDate  DateTime?
  credentialUrl   String?
  ResumeSection   ResumeSection? @relation(fields: [resumeSectionId], references: [id])
  resumeSectionId String?        @db.ObjectId
}

model OtherSection {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  title           String
  content         String
  ResumeSection   ResumeSection? @relation(fields: [resumeSectionId], references: [id])
  resumeSectionId String?        @db.ObjectId
}

model Contact {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  createdAt   DateTime
  createdBy   String     @db.ObjectId // userId
  user        User       @relation(fields: [createdBy], references: [id])
  Interview   Interview? @relation(fields: [interviewId], references: [id])
  interviewId String?    @db.ObjectId
}

model JobTitle {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  label           String
  value           String
  jobs            Job[]
  createdBy       String           @db.ObjectId // userId
  user            User             @relation(fields: [createdBy], references: [id])
  workExperiences WorkExperience[]

  @@unique([createdBy, value])
}

model JobStatus {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  label String
  value String @unique
  jobs  Job[]
}

model Location {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  label          String
  value          String
  stateProv      String?
  country        String?
  jobsApplied    Job[]
  createdBy      String           @db.ObjectId // userId
  user           User             @relation(fields: [createdBy], references: [id])
  educations     Education[]
  workExperience WorkExperience[]
}

model Company {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  label           String
  value           String
  jobsApplied     Job[]
  logoUrl         String? // field is optional
  createdBy       String           @db.ObjectId // userId
  user            User             @relation(fields: [createdBy], references: [id])
  workExperiences WorkExperience[]

  @@unique([createdBy, value])
}

model JobSource {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  label       String
  value       String @unique
  jobsApplied Job[]
}

model Interview {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime
  jobId        String    @db.ObjectId
  job          Job?      @relation(fields: [jobId], references: [id])
  interviewers Contact[]
}

model Job {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  userId       String        @db.ObjectId
  User         User          @relation(fields: [userId], references: [id])
  jobUrl       String?
  description  String
  jobType      String
  createdAt    DateTime
  applied      Boolean       @default(false)
  appliedDate  DateTime?
  dueDate      DateTime?
  statusId     String        @db.ObjectId
  Status       JobStatus     @relation(fields: [statusId], references: [id])
  JobTitle     JobTitle      @relation(fields: [jobTitleId], references: [id])
  jobTitleId   String        @db.ObjectId
  Company      Company       @relation(fields: [companyId], references: [id])
  companyId    String        @db.ObjectId
  JobSource    JobSource?    @relation(fields: [jobSourceId], references: [id])
  jobSourceId    String?       @db.ObjectId
  salaryRange    String?
  salaryCurrency String?       @default("USD")
  Location       Location?     @relation(fields: [locationId], references: [id])
  locationId   String?       @db.ObjectId
  Interview    Interview[]
  Resume       Resume?       @relation(fields: [resumeId], references: [id])
  resumeId     String?       @db.ObjectId
  CoverLetters CoverLetter[]
}

model ActivityType {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  label       String
  value       String   @unique
  description String?
  createdBy   String   @db.ObjectId // userId
  user        User     @relation(fields: [createdBy], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Activities Activity[]
}

model Activity {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @db.ObjectId
  User         User      @relation(fields: [userId], references: [id])
  activityName String
  startTime    DateTime
  endTime      DateTime?
  duration     Int?
  description  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  activityType   ActivityType @relation(fields: [activityTypeId], references: [id])
  activityTypeId String       @db.ObjectId
}

model CoverLetterTemplate {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  userId       String        @db.ObjectId
  user         User          @relation(fields: [userId], references: [id])
  title        String
  content      String
  isDefault    Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  CoverLetters CoverLetter[]
}

model CoverLetter {
  id         String               @id @default(auto()) @map("_id") @db.ObjectId
  jobId      String               @db.ObjectId
  job        Job                  @relation(fields: [jobId], references: [id])
  templateId String?              @db.ObjectId
  template   CoverLetterTemplate? @relation(fields: [templateId], references: [id])
  title      String
  content    String
  version    Int                  @default(1)
  isCurrent  Boolean              @default(true)
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt
}
